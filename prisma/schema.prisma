generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String      @id @default(uuid())
  username String @unique
  email String @unique
  password String
  name String
  createdAt DateTime @default(now())
  TaskUser TaskUser[]
  @@map("users")

}

model Task {

  id       String      @id @default(uuid())
  title   String
  description String
  startAt DateTime
  endAt DateTime
  priority String
  status String
  TaskUser TaskUser[]
  @@map("tasks")
}

model TaskUser {
  id      String      @id @default(uuid())
  createdAt DateTime @default(now())
  task Task @relation(fields: [taskId], references: [id])
  user User @relation(fields: [userId], references: [id])
  userId String
  taskId String
  @@map("task_user")
  @@index([userId])
  @@index([taskId])
}